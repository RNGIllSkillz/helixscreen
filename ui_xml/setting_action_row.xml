<!-- Reusable Settings Action Row Component -->
<!-- Creates a clickable row that opens a sub-panel or performs an action -->
<!-- Usage: <setting_action_row label="Bed Mesh Calibration"/> -->
<!-- Note: Parent C++ code attaches click handler to "action_row" by name -->
<component>
  <api>
    <prop type="string" name="label" default="Action"/>
    <prop type="string" name="description" default=""/>
  </api>
  <view extends="lv_obj" name="action_row" width="100%" height="56" flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center" style_bg_opa="0" style_border_width="0" style_pad_left="#padding_normal" style_pad_right="#padding_normal" style_pad_top="#padding_small" style_pad_bottom="#padding_small" clickable="true" scrollable="false">
    <!-- Left side: Label -->
    <lv_obj flex_grow="1" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center" scrollable="false">
      <lv_label name="label" text="$label" style_text_font="#font_body"/>
    </lv_obj>
    <!-- Right side: Arrow indicator (using Unicode arrow since no chevron_right icon) -->
    <lv_label text=">" style_text_font="#font_body" style_text_color="#text_secondary" align="right_mid"/>
  </view>
</component>
