<!-- Toast Notification Component - Temporary non-blocking messages
     Uses severity_card widget for icon color styling (border disabled for toasts).
     Pass severity="error|warning|success|info" and it handles icon colors.
     Call ui_severity_card_finalize() after creation to style icon. -->
<component>
  <api>
    <prop type="string" name="severity"/>
    <prop type="string" name="message"/>
  </api>

  <!-- Toast container - floating appearance with shadow, positioned top-right -->
  <view extends="severity_card" name="toast_root"
        severity="$severity"
        align="top_right"
        x="-16"
        y="16"
        width="content"
        style_min_width="50%"
        style_max_width="400"
        height="content"
        style_radius="#border_radius_large"
        style_pad_all="#padding_normal"
        style_pad_gap="#gap_small"
        style_border_width="0"
        style_bg_color="#app_bg_color"
        style_shadow_width="24"
        style_shadow_spread="4"
        style_shadow_opa="120"
        style_shadow_ofs_y="4"
        flex_flow="row"
        style_flex_main_place="start"
        style_flex_cross_place="start">

    <!-- Severity icon (left, top-aligned) -->
    <lv_label name="severity_icon" text="&#xF071;"
              style_text_font="fa_icons_24"/>

    <!-- Message text (wraps to fit content) -->
    <lv_label name="toast_message" text="$message"
              style_text_font="#font_body"
              flex_grow="1"
              long_mode="wrap"
              style_pad_left="#gap_small"
              style_pad_right="#gap_small"/>

    <!-- Close button (top-right corner, transparent background) -->
    <lv_button name="toast_close_btn"
               width="32"
               height="32"
               style_radius="#border_radius"
               style_border_width="0"
               style_bg_opa="0"
               style_pad_all="0"
               clickable="true">
      <event_cb trigger="clicked" callback="toast_close_btn_clicked"/>
      <!-- LV_SYMBOL_CLOSE -->
      <lv_label text="&#xF00D;" align="center" style_text_font="#font_body"/>
    </lv_button>
  </view>
</component>
