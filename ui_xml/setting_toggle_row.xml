<!-- Reusable Settings Toggle Row Component -->
<!-- Creates a setting row with label and switch toggle -->
<!-- Usage: <setting_toggle_row label="Dark Mode" subject="settings_dark_mode"/> -->
<!-- Note: Switch automatically binds to subject for two-way updates -->
<component>
  <api>
    <prop type="string" name="label" default="Setting"/>
    <prop type="string" name="subject" default=""/>
    <prop type="string" name="description" default=""/>
  </api>
  <view extends="lv_obj" name="setting_row" width="100%" height="56" flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center" style_bg_opa="0" style_border_width="0" style_pad_left="#padding_normal" style_pad_right="#padding_normal" style_pad_top="#padding_small" style_pad_bottom="#padding_small" scrollable="false">
    <!-- Left side: Label and optional description -->
    <lv_obj flex_grow="1" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center" scrollable="false">
      <lv_label name="label" text="$label" style_text_font="#font_body"/>
      <!-- Description shown if provided (hidden by default via 0 height) -->
    </lv_obj>
    <!-- Right side: Switch toggle -->
    <lv_switch name="toggle" width="50" height="28"/>
  </view>
</component>
