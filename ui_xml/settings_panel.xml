<!-- Settings Panel - Scrolling List Design -->
<!-- Comprehensive settings organized in sections: Appearance, Printer, Notifications, Calibration, System, About -->
<component>
  <view extends="lv_obj" name="settings_panel" width="100%" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" scrollable="true" scroll_dir="ver">

    <!-- ================================================================== -->
    <!-- APPEARANCE SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="APPEARANCE"/>

    <!-- Dark Mode Toggle -->
    <setting_toggle_row name="row_dark_mode" label="Dark Mode"/>

    <!-- Display Sleep Dropdown -->
    <setting_dropdown_row name="row_display_sleep" label="Display Sleep"/>

    <!-- ================================================================== -->
    <!-- PRINTER SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="PRINTER"/>

    <!-- LED Light Toggle -->
    <setting_toggle_row name="row_led_light" label="LED Light"/>

    <!-- ================================================================== -->
    <!-- NOTIFICATIONS SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="NOTIFICATIONS"/>

    <!-- Sounds Toggle (placeholder) -->
    <setting_toggle_row name="row_sounds" label="Sounds"/>

    <!-- Completion Alert Toggle -->
    <setting_toggle_row name="row_completion_alert" label="Print Completion Alert"/>

    <!-- ================================================================== -->
    <!-- CALIBRATION SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="CALIBRATION"/>

    <!-- Bed Mesh Calibration -->
    <setting_action_row name="row_bed_mesh" label="Bed Mesh Calibration"/>

    <!-- Z-Offset Calibration -->
    <setting_action_row name="row_z_offset" label="Z-Offset Calibration"/>

    <!-- PID Tuning -->
    <setting_action_row name="row_pid_tuning" label="PID Tuning"/>

    <!-- ================================================================== -->
    <!-- SYSTEM SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="SYSTEM"/>

    <!-- Network Settings -->
    <setting_action_row name="row_network" label="Network Settings"/>

    <!-- Factory Reset -->
    <setting_action_row name="row_factory_reset" label="Factory Reset"/>

    <!-- ================================================================== -->
    <!-- ABOUT SECTION -->
    <!-- ================================================================== -->
    <setting_section_header title="ABOUT"/>

    <!-- Version Info -->
    <setting_info_row name="row_version" label="Version" value="1.0.0"/>

    <!-- Printer Name -->
    <setting_info_row name="row_printer" label="Printer" value="—"/>

    <!-- Klipper Version -->
    <setting_info_row name="row_klipper" label="Klipper" value="—"/>

    <!-- Bottom padding for scroll -->
    <lv_obj width="100%" height="#padding_normal" style_bg_opa="0" style_border_width="0"/>

  </view>
</component>
